<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    tools:context=".activities.MatchingItem"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/rl_top"
        android:paddingHorizontal="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:foreground="@drawable/bt_circle_hover"
            android:id="@+id/bt_back"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@mipmap/ic_back"
            />
        <TextView
            android:text="@string/matching_items"
            android:layout_centerVertical="true"
            android:fontFamily="@font/regular"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_22"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="0dp"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/bt_color"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_color"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"/>
                <TextView
                    android:textSize="@dimen/sp_18"
                    android:fontFamily="@font/regular"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:text="@string/colors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="0dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:id="@+id/bt_shape"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_shapes"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"/>
                <TextView
                    android:textSize="@dimen/sp_18"
                    android:fontFamily="@font/regular"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:text="@string/shapes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="0dp"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/bt_fruits"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_fruits"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"/>
                <TextView
                    android:textSize="@dimen/sp_18"
                    android:fontFamily="@font/regular"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:text="@string/fruits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="0dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:id="@+id/bt_da"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_animals"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"/>
                <TextView
                    android:lineHeight="@dimen/dp_20"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/sp_18"
                    android:fontFamily="@font/regular"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:text="@string/domestic_nanimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="0dp"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/bt_number"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_number"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"/>
                <TextView
                    android:textSize="@dimen/sp_18"
                    android:fontFamily="@font/regular"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:text="@string/numbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="0dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:id="@+id/bt_wild"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_wild"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"/>
                <TextView
                    android:textSize="@dimen/sp_18"
                    android:fontFamily="@font/regular"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:text="@string/wild_animals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>