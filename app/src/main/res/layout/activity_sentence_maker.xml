<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginStart="@dimen/dp_15"
            android:foreground="@drawable/bt_circle_hover"
            android:id="@+id/bt_back"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@mipmap/ic_back"
            />
        <TextView
            android:layout_centerVertical="true"
            android:fontFamily="@font/regular"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:text="@string/sentence_maker"
            android:textSize="@dimen/sp_20"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/ic_undo"
                android:id="@+id/bt_pre"/>
            <ImageView
                android:layout_marginStart="@dimen/dp_5"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/ic_next"
                android:id="@+id/bt_next"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/sentence_des"
        android:textSize="@dimen/sp_12"
        android:layout_below="@id/rl_top"
        android:paddingHorizontal="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/tv_des"/>
    <TableLayout
        android:layout_below="@id/tv_des"
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2"
        android:layout_marginTop="@dimen/dp_15" />

    <RelativeLayout
        android:id="@+id/rl_text"
        android:layout_below="@+id/tableLayout"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sentenceText"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"/>
        <ImageView
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/ic_reset"
            app:tint="@color/white"
            android:id="@+id/bt_reset"/>
    </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_text">
            <VideoView
                android:layout_centerHorizontal="true"
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    <com.app.mtotosmart.helper.custom.ConnectionView
        android:id="@+id/connectionView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
