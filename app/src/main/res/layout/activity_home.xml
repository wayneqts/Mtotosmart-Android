<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue2"
    tools:context=".activities.Home"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">
        <TextView
            android:textSize="@dimen/sp_30"
            android:fontFamily="@font/regular"
            android:textAllCaps="true"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue1"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:foreground="@drawable/bt_circle_hover"
            android:layout_marginEnd="@dimen/dp_5"
            android:id="@+id/bt_info"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_info"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_below="@id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent=".5"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/img_boy"
            android:id="@+id/img_avatar"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:clickable="true"
                android:padding="@dimen/dp_15"
                android:gravity="center"
                android:background="@drawable/bg_round_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:foreground="@drawable/bt_circle_hover"
                        android:id="@+id/bt_alphabet"
                        android:src="@mipmap/bt_alphabets"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="@dimen/dp_120"/>
                    <ImageView
                        android:foreground="@drawable/bt_circle_hover"
                        android:id="@+id/bt_spell"
                        android:src="@mipmap/bt_spelling"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="@dimen/dp_120"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:foreground="@drawable/bt_circle_hover"
                        android:id="@+id/bt_verb"
                        android:src="@mipmap/bt_verb"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="@dimen/dp_120"/>
                    <ImageView
                        android:foreground="@drawable/bt_circle_hover"
                        android:id="@+id/bt_matching"
                        android:src="@mipmap/bt_matching"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="@dimen/dp_120"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:foreground="@drawable/bt_circle_hover"
                        android:id="@+id/bt_color"
                        android:src="@mipmap/bt_color"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="@dimen/dp_120"/>
                    <ImageView
                        android:foreground="@drawable/bt_circle_hover"
                        android:id="@+id/bt_body"
                        android:src="@mipmap/bt_body"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="@dimen/dp_120"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:foreground="@drawable/bt_circle_hover"
                        android:id="@+id/bt_sentence"
                        android:src="@mipmap/bt_color"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="@dimen/dp_120"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>