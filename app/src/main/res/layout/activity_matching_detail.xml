<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/touch_view"
    android:background="@color/blue"
    tools:context=".activities.ColorMatching"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:paddingVertical="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_top">
        <TextView
            android:id="@+id/tv_title"
            android:fontFamily="@font/regular"
            android:textSize="@dimen/sp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAllCaps="true"
            android:textColor="@color/white" />
    </RelativeLayout>
    <ImageView
        android:layout_below="@id/rl_top"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/bt_left_1"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_60"/>
    <ImageView
        android:layout_below="@id/rl_top"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_alignParentEnd="true"
        android:id="@+id/bt_right_1"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_60"/>
    <ImageView
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_20"
        android:id="@+id/bt_left_2"
        android:layout_below="@id/bt_left_1"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_60"/>
    <ImageView
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_below="@id/bt_right_1"
        android:layout_alignParentEnd="true"
        android:id="@+id/bt_right_2"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_60"/>
    <ImageView
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_20"
        android:id="@+id/bt_left_3"
        android:layout_below="@id/bt_left_2"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_60"/>
    <ImageView
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_below="@id/bt_right_2"
        android:layout_alignParentEnd="true"
        android:id="@+id/bt_right_3"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_60"/>
    <ImageView
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_20"
        android:id="@+id/bt_left_4"
        android:layout_below="@id/bt_left_3"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_60"/>
    <ImageView
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_below="@id/bt_right_3"
        android:layout_alignParentEnd="true"
        android:id="@+id/bt_right_4"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_60"/>
    <ImageView
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_20"
        android:id="@+id/bt_left_5"
        android:layout_below="@id/bt_left_4"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_60"/>
    <ImageView
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_below="@id/bt_right_4"
        android:layout_alignParentEnd="true"
        android:id="@+id/bt_right_5"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_60"/>
    <ImageView
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_20"
        android:id="@+id/bt_left_6"
        android:layout_below="@id/bt_left_5"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_60"/>
    <ImageView
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_below="@id/bt_right_5"
        android:layout_alignParentEnd="true"
        android:id="@+id/bt_right_6"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_60"/>

    <RelativeLayout
        android:layout_marginVertical="@dimen/dp_10"
        android:id="@+id/draw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:foreground="@drawable/bt_circle_hover"
        android:id="@+id/bt_back"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_15"
        android:src="@mipmap/ic_back"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lotie"
        app:lottie_autoPlay="true"
        android:visibility="gone"
        app:lottie_rawRes="@raw/checkmark"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_250"/>
</RelativeLayout>