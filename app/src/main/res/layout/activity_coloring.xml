<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:paddingVertical="@dimen/dp_10"
    tools:context=".activities.Coloring"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:paddingHorizontal="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:foreground="@drawable/bt_circle_hover"
            android:id="@+id/bt_back"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@mipmap/ic_back"
            />
        <TextView
            android:layout_centerVertical="true"
            android:fontFamily="@font/regular"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:text="@string/coloring"
            android:textSize="@dimen/sp_22"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:foreground="@drawable/bt_circle_hover"
            android:id="@+id/bt_share"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@mipmap/ic_share"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/rl_top"
        android:layout_centerHorizontal="true"
        android:id="@+id/bt_select"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="@dimen/dp_180"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/btn_selectphoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/regular"
            android:text="@string/select_photo"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/paint_view"
        android:layout_marginVertical="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bt_select"
        android:layout_above="@id/ll_bot"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_bot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:visibility="invisible"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:id="@+id/bt_undo"
                android:src="@mipmap/ic_undo"/>
            <ImageView
                android:visibility="invisible"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:id="@+id/bt_redo"
                android:src="@mipmap/ic_next"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>