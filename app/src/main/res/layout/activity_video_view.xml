<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".activities.ViewVideo"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/rl_top"
        android:paddingHorizontal="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:foreground="@drawable/bt_circle_hover"
            android:id="@+id/bt_back"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@mipmap/ic_back"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_centerVertical="true"
            android:fontFamily="@font/regular"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_22"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ImageView
        android:layout_marginVertical="@dimen/dp_15"
        android:layout_below="@id/rl_top"
        android:layout_above="@id/ll_bot"
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/img_boy"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top"
        android:layout_above="@id/ll_bot"
        android:layout_marginTop="@dimen/dp_15"
        >

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_video"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent=".9">
            <VideoView
                android:id="@+id/video_view"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                app:tint="@color/blue"
                android:id="@+id/bt_close"
                android:src="@mipmap/ic_close"
                android:layout_margin="@dimen/dp_5"
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:padding="@dimen/dp_10"
        android:background="@drawable/bg_rounded_yellow"
        android:id="@+id/ll_bot"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rcv_verb"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>